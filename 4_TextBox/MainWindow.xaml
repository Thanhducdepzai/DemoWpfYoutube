<Window x:Class="_4_TextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_TextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox FontSize="20" x:Name="txbValue" VerticalAlignment="Center" TextChanged="txbValue_TextChanged"  ></TextBox>
        <TextBlock FontSize="20" x:Name="txblValue" VerticalAlignment="Top"></TextBlock>
        <Button FontSize="20" x:Name="btnValue" 
                Click="btnValue_Click"
                Content="Click" VerticalAlignment="Bottom"></Button>
    </Grid>
</Window>
